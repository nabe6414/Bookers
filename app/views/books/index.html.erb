<div class="index-book">
  <h1>Books</h1>
  <table class="book-list">
    <thead>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td nowrap>
          <%= link_to 'Show', book_path(book.id) %>
          <%= link_to 'Edit', edit_book_path(book.id) %>
          <%= link_to 'Destroy', book_path(book.id), method: :delete %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <div class="new-book">
    <h2>New book</h2>
    <%= form_with model: @book, url: '/books', method: :post do |f| %>

      <p>Title</p>
      <%= f.text_field :title %>

      <p class="new">Body</p>
      <%= f.text_area :body %>

      <p class="new"><%= f.submit 'Create Book' %></p>
    <% end %>
  </div>
</div>