<div class="edit-book">
  <h1>Editing Book</h1>

  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

    <p>Title</p>
    <%= f.text_field :title %>

    <p class="edit">Body</p>
    <%= f.text_area :body %>

    <p class="edit"><%= f.submit 'Update Book' %></p>

  <% end %>

  <p class="edit">
    <%= link_to 'Show', book_path(@book.id) %>
    |
    <%= link_to 'Back', books_path %>
  </p>
</div>